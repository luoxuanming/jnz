<template>
  <div class="lyform">
    <scroll-view class="scroll" :scroll-y="true">
      <div class="content">
        <div class="text_area">
          <dl>
            <dt>
              标题
              <span>*</span>
            </dt>
            <dd><input type="text" v-model="title" placeholder="请输入不超过50字的标题"></dd>
          </dl>
          <dl>
            <dt>
              类型
              <span>*</span>
            </dt>
            <dd>
              <picker @change="bindPickerChange" :value="index" :range="array">
                <view class="picker"> {{array[index]}} <i class="iconfont icon-xiala"></i> </view>
              </picker>
            </dd>
          </dl>
          <dl class="comm">
            <dt>
              内容
              <span>*</span>
            </dt>
            <dd>
              <textarea name="" id="" v-model="content" placeholder="请输入留言内容" class="textinput"></textarea>
            </dd>
          </dl>
        </div>
        <div class="fj">
          <div>
            <img src="../../images/fj.png" class="fj" alt="">
            添加附件
          </div>
          <div class="icon">+</div>
        </div>
        <div class="fj">
          <div>
            <img src="../../images/tp.png" class="fj" alt="">
            添加图片
          </div>
          <div class="icon">+</div>
        </div>
        <div class="fj gk">
          <div>是否公开</div>
          <div class="icon"><switch checked @change="switch1Change" :color="color" class="wx-switch-input"/></div>
        </div>
      </div>
      <div class="btn">
        <div class="tj" @click="tj">提交</div>
      </div>
    </scroll-view>
  </div>
</template>

<script>
  import * as conf from '../../utils/config'
  export default {

    data () {
      return {
        index:0,
        array:[
          "请选择反馈类型",
          "党群服务中心",
          "民生微实事",
          "志愿者服务活动",
          "其他意见建议"
        ],
        color:"#97abf4",
        title:"",
        content:"",
        isShow:true
      }
    },

    created () {

    },
    methods:{
      bindPickerChange(e){
        // console.log(e.target.value)
        this.index=e.target.value;
      },
      tj(){
        //提交
        if(!this.title || !this.content){
          wx.showToast({
            title: '请完成信息',
            icon: 'none',
            duration: 2000
          });
        }else{
          if(this.index==0){
            wx.showToast({
              title: '请选择反馈类型',
              icon: 'none',
              duration: 2000
            });
          }else{
            this.addComment();
          }
        }
      },
      switch1Change(e){
        //console.log(e.target.value)
        this.isShow=!this.isShow;
      },
      addComment(){
        //添加留言
        var that=this;
        wx.getStorage({
          key: 'userInfos',
          success(ret) {
            console.log(ret.data.USER_ID+"*"+that.title+"*"+that.content+"*"+that.array[that.index]+"*"+that.isShow);
            wx.request({
              url:`${conf.HOST}/stddj-gzgj/servlet/comment.action?method=addComment`,
              data:{
                userId:ret.data.USER_ID,
                commentTitle:that.title,
                commentNotes:that.content,
                commentType:that.index,
                isShow:that.isShow,
                representId:1
              },
              success(res){
                console.log(JSON.stringify(res))
                wx.showToast({
                  title: '提交完成',
                  icon: 'success',
                  duration: 2000
                })
              }
            })
          }
        })
      }
    },
    components: {

    },
  }
</script>

