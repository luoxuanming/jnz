      getList(id,e){
        var that=this;
        if(e){
          console.log(e.target.dataset.tabid)
          var tadid=e.target.dataset.tabid;
          that.tab=[false,false,false,false,false];
          that.tab[tadid]=true;
        }
        wx.getStorage({
          key: 'token',
          success(ret) {
            wx.request({
              url:`${conf.HOST}/stddj-jjb/servlet/meeting.action?method=getMeetingList`, 
              data: {
                userId: '2',
                orgId: id
              },
              header: {
                'content-type': 'application/json' // 默认值
              },
              success(res) {
               
                if(JSON.stringify(res.data)=="[]"){
                  that.nullImg=true
                }else{
                  that.nullImg=false
                }

                that.list=res.data;
              }
            })
          }
        })
      },
      bindPickerChange(e){
        // console.log(e.target.value)
        this.index=e.target.value;
      },
      bindPickerChange2(e){
        // console.log(e.target.value)
        this.index2=e.target.value;
      },
      bindPickerChange3(e){
        // console.log(e.target.value)
        this.index3=e.target.value;
      },
     
      goFq(){
        wx.navigateTo({
          url:`/pages/jjbfq/main?id=1`
        })
      },
      goChat(e,id){
        
     
        wx.navigateTo({
          url:`/pages/chat/main?id=`+id
        })
      },
      errorfn(index){
        this.list[index].NEWS_THUMB_IMG="../../images/user_pic.png"
      }
    },
